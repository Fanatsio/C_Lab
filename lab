#include <stdio.h>
#include <math.h>

int main()
{
    double x, h;
    int i = 0;
    printf("Enter h -> ");
    scanf("%lf", &h);
    printf("x               f(x)\n");
    printf("------------------------------\n");
    while (x <= 3)
    {
      i += 1;
      if (0 <= x && x <= 1.5)
      {
        double y = pow(2, x) - 2 + x * x;
        printf("%lf             %lf\n", x, y);
      }
      if (1.5 < x && x <= 3.0)
      {
        double z = sqrt(x) * exp(-(x * x));
        printf("%lf             %lf\n", x, z);
      }
      x = h * i;
    }
    return 0;
}
